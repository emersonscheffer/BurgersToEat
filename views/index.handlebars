<h1>Eat - Da - Burger</h1>

<h2>Enter a burger you want to eat</h2>

<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            {{> burgers/burgers-div devour=false}}
        {{/unless}}
    {{/each}}
</ul>

<hr>

<ul>
    {{#each burgers}}
        {{#if devoured}}
            {{> burgers/burgers-div devour=true}}
        {{/if}}
    {{/each}}
</ul>